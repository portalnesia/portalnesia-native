{
    "compilerOptions": {
      "allowJs": true,
      "allowSyntheticDefaultImports": true,
      "esModuleInterop": true,
      "isolatedModules": true,
      "jsx": "react",
      "lib": ["es6"],
      "moduleResolution": "node",
      "strict": true,
      "target": "esnext",
      "noEmit": true,
      "baseUrl": ".",
      "paths": {
        "@pn/components/*": ["components/*"],
        "@pn/utils/*": ["utils/*"],
        "@pn/screens/*": ["screens/*"],
        "@pn/assets/*": ["assets/*"],
        "@pn/provider/*":["provider/*"]
      }
    },
    "exclude": ["node_modules","android","babel.config.js","metro.config.js","jest.config.js"],
    //"include": ["**/*.ts", "**/*.tsx","**/*.js","**/*.jsx"]
  }