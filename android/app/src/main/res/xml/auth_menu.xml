<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Settings"
        android:visibility="visible"
        tools:visibility="visible">
        <PreferenceScreen
            android:key="account_settings"
            android:summary=""
            android:title="@string/account_settings"
            android:visibility="visible"
            tools:visibility="visible">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="pn://setting/account"
                android:targetPackage="com.portalnesia.app"
                android:targetClass="com.portalnesia.app.MainActivity"/>
        </PreferenceScreen>
        <PreferenceScreen
            android:key="security_settings"
            android:summary=""
            android:title="@string/security_settings"
            android:visibility="visible"
            tools:visibility="visible">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="pn://setting/security"
                android:targetPackage="com.portalnesia.app"
                android:targetClass="com.portalnesia.app.MainActivity" />
        </PreferenceScreen>
        <PreferenceScreen
            android:key="notification_settings"
            android:summary=""
            android:title="@string/notification_settings"
            android:visibility="visible"
            tools:visibility="visible">
            <intent
                android:action="android.intent.action.VIEW"
                android:data="pn://setting/notification"
                android:targetPackage="com.portalnesia.app"
                android:targetClass="com.portalnesia.app.MainActivity" />
        </PreferenceScreen>
    </PreferenceCategory>
</PreferenceScreen>